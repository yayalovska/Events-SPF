@model IEnumerable<EventsDomain.Models.Department>

@{
    ViewData["Title"] = "Всі департаменти";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.FacultyId != null)
{
    <h2>Департаменти факультету з ID @ViewBag.FacultyId</h2>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.FacultyId == null)
{
    <a asp-action="Create">Створити новий департамент</a>
}
else
{
    <a asp-action="Create" asp-route-facultyId="@ViewBag.FacultyId">Створити новий департамент для цього факультету</a>
}
