@model IEnumerable<EventsDomain.Models.EducationProgram>

@{
    ViewData["Title"] = "Програми навчання";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Faculty.Name)</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var program in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => program.Name)</td>
                <td>@Html.DisplayFor(modelItem => program.Faculty.Name)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@program.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@program.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@program.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Створити нову програму навчання</a>
